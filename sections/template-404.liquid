{% comment %}
  <h1>{{ 'general.404.title' | t }}</h1>
  <p>{{ 'general.404.subtext_html' | t }}</p>
{% endcomment %}

<div class='max-w-md'>
  <div class='text-5xl font-bold my-4'>{{ section.settings.title }}</div>
  <div class='my-4'>
    <p class='text-base md:text-xl leading-normal'>{{ section.settings.subtext }}</p>
  </div>
  <div class='my-4'>
    {% if section.settings.redirectUrl == blank %}
      {% assign redirectUrl = shop.secure_url %}
    {% else %}
      {% assign redirectUrl = section.settings.redirectUrl %}
    {% endif %}
    <a href='{{ redirectUrl }}' class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white">{{ section.settings.redirectLabel }}</a>
  </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Template 404 Heading Title",
      "default": "404"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Template 404 Sub Text",
      "default": "The page that you're looking for is not found."
    },
    {
      "type": "text",
      "id": "redirectLabel",
      "label": "Redirect Label",
      "default": "Back to home"
    },
    {
      "type": "url",
      "id": "redirectUrl",
      "label": "Redirect URL"
    }
  ]
}
{% endschema %}
